<h1> Sign in</h1>

<div class="pure-form">
  <div class="pure-g">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "pure-button pure-button-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up", signup_path %></p>
  </div>
</div>