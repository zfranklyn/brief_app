<ul class="grid cs-style-3">
	<% @articles.each do |article| %>
		<li>
	        <figure>
	        	<% if article.image.blank? %>
	        	<%= link_to image_tag(("missing.png"), :class => "img"), article_path(article) %>
				<% else %>
	            <%= link_to image_tag(article.image(:medium), :class => "img"), article_path(article) %>
	            <% end %>

	            <%= link_to(article_path(article)) do %>
	            <figcaption>
	                <h3><%= article.title%></h3>
	                <p class="center"><%= article.region.upcase %></p>
	            </figcaption>
	            <% end %>
	        </figure>
    	</li>

    	<% end %>

</ul>